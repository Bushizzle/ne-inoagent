{
  "name": "Ne inoagent",
  "version": "0.3.5",
  "description": "The extension removes the foreign agent message from all pages to make the news more readable",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.ts"]
    }
  ],
  "icons": {
    "16": "assets/heart.png",
    "48": "assets/heart.png",
    "128": "assets/heart.png"
  },
  "action": {
    "default_icon": {
      "16": "assets/heart.png",
      "24": "assets/heart.png",
      "32": "assets/heart.png"
    },
    "default_title": "Ne inoagent",
    "default_popup": "popup.html"
  },
  "manifest_version": 3
}
